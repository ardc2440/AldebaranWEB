@page "/application-roles"
@attribute [Authorize]

<PageTitle>Roles</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12">
            <RadzenText Text="Roles" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Buscar ..." style="display: block; width: 100%" @oninput="@Search" />
    <RadzenRow>
        <RadzenColumn SizeMD="12">
            <RadzenDataGrid @ref="grid0" AllowFiltering="true" AllowPaging="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
                            AllowSorting="true" Data="@roles" TItem="Aldebaran.Web.Models.ApplicationRole" RowExpand=@GetChildData ExpandMode="Radzen.DataGridExpandMode.Single" FilterCaseSensitivity="Radzen.FilterCaseSensitivity.CaseInsensitive">
                <Columns>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.ApplicationRole" Property="Name" Title="Nombre" />
                </Columns>
                <Template Context="role">
                    <RadzenStack Class="rz-my-8">
                        <RadzenRow Gap="0" AlignItems="AlignItems.Center">
                            <RadzenColumn Size="12">
                                <RadzenText Visible="@(role != null)" Text="Usuarios" TextStyle="TextStyle.H4" TagName="TagName.H2" style="margin: 0" />
                            </RadzenColumn>
                        </RadzenRow>
                        <RadzenDataGrid ColumnWidth="200px" Visible="@(role != null)" @ref=ApplicationUserDataGrid AllowFiltering="true" FilterMode="Radzen.FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
                                        Data="@users" TItem="Aldebaran.Web.Models.ViewModel.UserViewModel" AllowColumnPicking="true" AllowColumnResize="true" AllowMultiColumnSorting="true" EditMode="Radzen.DataGridEditMode.Single" AllowGrouping="true" AllowColumnReorder="true" FilterCaseSensitivity="Radzen.FilterCaseSensitivity.CaseInsensitive">
                            <Columns>
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.ViewModel.UserViewModel" Property="FullName" Title="Nombre" />
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.ViewModel.UserViewModel" Property="UserName" Title="Nombre de usuario" />
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.ViewModel.UserViewModel" Property="Email" Title="Correo electrónico" />
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.ViewModel.UserViewModel" Property="IdentificationNumber" Title="Identificación" />
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.ViewModel.UserViewModel" Property="Area" Title="Área" />
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.ViewModel.UserViewModel" Property="Position" Title="Posición" />
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.ViewModel.UserViewModel" Property="LockoutEnabled" Title="Bloqueado">
                                    <Template Context="user">
                                        <RadzenCheckBox @bind-Value="@user.LockoutEnabled" Name="LockoutEnabled" Disabled="true"></RadzenCheckBox>
                                    </Template>
                                </RadzenDataGridColumn>
                            </Columns>
                        </RadzenDataGrid>
                    </RadzenStack>
                </Template>
            </RadzenDataGrid>
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>
