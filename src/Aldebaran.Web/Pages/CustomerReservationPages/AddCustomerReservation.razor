@page "/add-customer-reservation"

@attribute [Authorize(Roles = "Admin,Adjustment Editor")]
@using Aldebaran.Web.Resources.LocalizedControls;
@inject Aldebaran.Infraestructure.Common.Utils.ISharedStringLocalizer SharedLocalizer

<PageTitle>Nueva reserva de artículos</PageTitle>
<LoadingData IsLoadingData="@isLoadingInProgress" />

@if (!isLoadingInProgress)
{
    <RadzenCard>
        <RadzenStack>
            <RadzenTemplateForm TItem="Aldebaran.Application.Services.Models.CustomerReservation" Data="@customerReservation" Visible="@(customerReservation != null)" Submit="@FormSubmit" InvalidSubmit="()=>Submitted=true">
                <RadzenRow AlignItems="AlignItems.Center">
                    <RadzenColumn Size="12">
                        <RadzenText Text="Crear reserva de artículos" TextStyle="TextStyle.H4" TagName="TagName.H1" style="margin: 0" />
                        <hr />
                    </RadzenColumn>
                    <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" @bind-Visible="@IsErrorVisible">
                        @Error
                    </RadzenAlert>
                </RadzenRow>
                <RadzenRow AlignItems="AlignItems.Start" Gap="2rem">
                    <RadzenColumn SizeMD="6">
                        <RadzenStack>
                            <RadzenFormField Text="Fecha de reserva" Variant="Variant.Text" Style="width: 100%;">
                                <ChildContent>
                                    <RadzenDatePicker DateFormat="@SharedLocalizer["date:format"]" style="display: block; width: 100%" @bind-Value="@customerReservation.ReservationDate" Name="RESERVATION_DATE" Placeholder="Seleccione la fecha de reserva" TabIndex="0" Change="()=> customerReservation.ExpirationDate = customerReservation.ExpirationDate > customerReservation.ReservationDate ? customerReservation.ExpirationDate : customerReservation.ReservationDate" />
                                </ChildContent>
                                <Helper>
                                    <RadzenRequiredValidator Text="La fecha de reserva es requerida" Component="RESERVATION_DATE" />
                                </Helper>
                            </RadzenFormField>
                            <RadzenFormField Text="Fecha de expiración" Variant="Variant.Text" Style="width: 100%;">
                                <ChildContent>
                                    <RadzenDatePicker DateFormat="@SharedLocalizer["date:format"]" style="display: block; width: 100%" @bind-Value="@customerReservation.ExpirationDate" Name="EXPIRATION_DATE" Placeholder="Seleccione la fecha de expiración" TabIndex="1" Min="@customerReservation.ReservationDate" />
                                </ChildContent>
                                <Helper>
                                    <RadzenRequiredValidator Text="La fecha de expiración es requerida" Component="EXPIRATION_DATE" />
                                </Helper>
                            </RadzenFormField>
                            <RadzenFormField Text="Cliente" Gap="2rem" Variant="Variant.Text" Style="width: 100%;">
                                <ChildContent>
                                    <RadzenDropDownDataGrid Data="@customersForCUSTOMERID" TextProperty="CustomerName" ValueProperty="CustomerId" AllowClear=true
                                                            style="display: block; width: 100%" @bind-Value="@customerReservation.CustomerId" Name="CUSTOMER_ID"
                                                            FilterCaseSensitivity="Radzen.FilterCaseSensitivity.CaseInsensitive" AllowFilteringByAllStringColumns="true"
                                                            Placeholder="Seleccione el cliente" TabIndex="2">
                                        <Columns>
                                            <RadzenDropDownDataGridColumn Property="IdentityType.IdentityTypeName" Title="Tipo de documento" />
                                            <RadzenDropDownDataGridColumn Property="IdentityNumber" Title="Identificación" />
                                            <RadzenDropDownDataGridColumn Property="CustomerName" Title="Nombre" />
                                            <RadzenDropDownDataGridColumn Property="City.CityId" Title="Ubicación">
                                                <Template Context="customer">
                                                    <span>(@customer.City.Department.Country.CountryCode) @customer.City.Department.DepartmentName - @customer.City.CityName</span>
                                                </Template>
                                            </RadzenDropDownDataGridColumn>
                                        </Columns>
                                    </RadzenDropDownDataGrid>
                                </ChildContent>
                                <Helper>
                                    <RadzenRequiredValidator Component="CUSTOMER_ID" DefaultValue="0" Text="El cliente es requerido "></RadzenRequiredValidator>
                                </Helper>
                            </RadzenFormField>
                            <RadzenFormField Text="Notas" Gap="2rem" Variant="Variant.Text" Style="width: 100%;">
                                <ChildContent>
                                    <RadzenTextArea style="display: block; width: 100%" @bind-Value="@customerReservation.Notes" Name="NOTES" Placeholder="Ingrese sus comentarios" TabIndex="3" Rows="3" MaxLength="250" />
                                </ChildContent>
                            </RadzenFormField>
                        </RadzenStack>
                    </RadzenColumn>
                    <RadzenColumn Size="6">
                        <RadzenText Text="Referencias" TextStyle="TextStyle.H5" TagName="TagName.H1" />
                        <RadzenStack>
                            <RadzenRow Gap="0" AlignItems="AlignItems.Center">
                                <RadzenColumn Size="12">
                                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Start" Gap="0.5rem">
                                        <RadzenButton Icon="add_circle_outline" Text="Nuevo" Click="@AddCustomerReservationDetailButtonClick" />
                                    </RadzenStack>
                                </RadzenColumn>
                            </RadzenRow>
                            <LocalizedDataGrid @ref="customerReservationDetailGrid" ColumnWidth="200px" AllowFiltering="true" FilterMode="Radzen.FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
                                               Data="@customerReservationDetails" TItem="Aldebaran.Application.Services.Models.CustomerReservationDetail">
                                <Columns>
                                    <RadzenDataGridColumn TItem="Aldebaran.Application.Services.Models.CustomerReservationDetail" Property="ReservedQuantity" Title="Cantidad" Width="100px" />
                                    <RadzenDataGridColumn TItem="Aldebaran.Application.Services.Models.CustomerReservationDetail" Title="Referencia">
                                        <Template Context="detail">
                                            <RadzenLabel MouseEnter="@(args => ShowTooltip(args,GetReferenceHint(@detail.ItemReference).Result, new TooltipOptions(){ Position = TooltipPosition.Left }))">
                                                (@detail.ItemReference.Item.Line.LineName) @detail.ItemReference.Item.ItemName - @detail.ItemReference.ReferenceName
                                            </RadzenLabel>
                                        </Template>
                                    </RadzenDataGridColumn>
                                    <RadzenDataGridColumn TItem="Aldebaran.Application.Services.Models.CustomerReservationDetail" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                                        <Template Context="detail">
                                            <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat" Size="ButtonSize.Medium"
                                                          Click="@(args => EditRow(detail))" @onclick:stopPropagation="true" MouseEnter="@(args => ShowTooltip(args,"Actualizar", new TooltipOptions(){ Position = TooltipPosition.Left }))">
                                            </RadzenButton>
                                            <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                                                          Shade="Shade.Lighter" Variant="Variant.Flat"
                                                          Click=@(args => DeleteCustomerReservationDetailButtonClick(detail)) @onclick:stopPropagation="true" MouseEnter="@(args => ShowTooltip(args,"Eliminar", new TooltipOptions(){ Position = TooltipPosition.Left }))" />
                                        </Template>
                                    </RadzenDataGridColumn>
                                </Columns>
                            </LocalizedDataGrid>
                        </RadzenStack>
                    </RadzenColumn>
                </RadzenRow>
                <RadzenRow AlignItems="Radzen.AlignItems.Center">
                    <RadzenColumn Size="12">
                        <RadzenStack class="my-2" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                            <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Guardar" Variant="Variant.Flat" BusyText="Procesando" IsBusy="@IsSubmitInProgress" />
                            <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancelar" Variant="Variant.Flat" Click="@CancelButtonClick" />
                        </RadzenStack>
                    </RadzenColumn>
                </RadzenRow>
            </RadzenTemplateForm>
        </RadzenStack>
    </RadzenCard>
}