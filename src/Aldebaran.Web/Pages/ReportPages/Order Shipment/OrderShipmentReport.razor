@page "/report/order-shipments"
@inject Aldebaran.Web.Resources.ISharedStringLocalizer SharedLocalizer

<RadzenStack Style="gap:0.3em">
    <RadzenRow AlignItems="AlignItems.Start">
        <RadzenColumn Size="12">
            <RadzenText Text="Reporte de ordenes en tránsito" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow AlignItems="AlignItems.Start" class="mb-2">
        <RadzenColumn SizeXL="10" SizeLG="10" SizeMD="12" SizeSM="12" SizeXS="12" SizeXX="12">
            <div class="rz-text-align-left d-flex gap-3">
                <RadzenButton Variant="Variant.Text" Icon="filter_alt" Click="@OpenFilters" Text="Filtros" ButtonStyle="ButtonStyle.Secondary" class="text-primary-color p-0 pb-1" />
                @if (Filter != null)
                {
                    <RadzenButton Variant="Variant.Text" Click="@RemoveFilters" Text="Limpiar filtros" ButtonStyle="ButtonStyle.Secondary" class="text-decoration-underline p-0 pb-1" />
                }
            </div>
            <div class="component-section d-flex flex-column justify-content-start text-secondary-color">
                @if (Filter != null)
                {
                    @if (!string.IsNullOrEmpty(Filter.OrderNumber))
                    {
                        <div class="d-flex flex-row justify-content-start gap-1 component-section-item">
                            <p class="component-label m-0 fw-bold">Número de la orden: </p>
                            <span style="line-height: 1rem;transform: translate(0, -2px);">@Filter.OrderNumber</span>
                        </div>
                    }
                    @if (Filter.CreationDate != null)
                    {
                        <div class="d-flex flex-row justify-content-start gap-1 component-section-item">
                            <p class="component-label m-0 fw-bold">Fecha de creación: </p>
                            <span style="line-height: 1rem;transform: translate(0, -2px);">@Filter.CreationDate.Value.ToString(SharedLocalizer["date:format"])</span>
                        </div>
                    }
                    @if (Filter.RequestDate != null)
                    {
                        <div class="d-flex flex-row justify-content-start gap-1 component-section-item">
                            <p class="component-label m-0 fw-bold">Fecha de solicitud: </p>
                            <span style="line-height: 1rem;transform: translate(0, -2px);">@Filter.RequestDate.Value.ToString(SharedLocalizer["date:format"])</span>
                        </div>
                    }
                    @if (Filter.ExpectedReceiptDate != null)
                    {
                        <div class="d-flex flex-row justify-content-start gap-1 component-section-item">
                            <p class="component-label m-0 fw-bold">Fecha esperada de recepción: </p>
                            <span style="line-height: 1rem;transform: translate(0, -2px);">@Filter.ExpectedReceiptDate.Value.ToString(SharedLocalizer["date:format"])</span>
                        </div>
                    }
                    @if (Filter.RealReceiptDate != null)
                    {
                        <div class="d-flex flex-row justify-content-start gap-1 component-section-item">
                            <p class="component-label m-0 fw-bold">Fecha real de recepción: </p>
                            <span style="line-height: 1rem;transform: translate(0, -2px);">@Filter.RealReceiptDate.Value.ToString(SharedLocalizer["date:format"])</span>
                        </div>
                    }
                    @if (Filter.ProviderId != null)
                    {
                        <div class="d-flex flex-row justify-content-start gap-1 component-section-item">
                            <p class="component-label m-0 fw-bold">Proveedor: </p>
                            <span style="line-height: 1rem;transform: translate(0, -2px);">@Filter.Provider.ProviderName</span>
                        </div>
                    }
                    @if (Filter.ForwarderId != null)
                    {
                        <div class="d-flex flex-row justify-content-start gap-1 component-section-item">
                            <p class="component-label m-0 fw-bold">Transportadora: </p>
                            <span style="line-height: 1rem;transform: translate(0, -2px);">@Filter.Forwarder.ForwarderName</span>
                        </div>
                    }
                    @if (Filter.ForwarderAgentId != null)
                    {
                        <div class="d-flex flex-row justify-content-start gap-1 component-section-item">
                            <p class="component-label m-0 fw-bold">Agente: </p>
                            <span style="line-height: 1rem;transform: translate(0, -2px);">@Filter.ForwarderAgent.ForwarderAgentName</span>
                        </div>
                    }
                    @if (Filter.ShipmentMethodId != null)
                    {
                        <div class="d-flex flex-row justify-content-start gap-1 component-section-item">
                            <p class="component-label m-0 fw-bold">Método de envío: </p>
                            <span style="line-height: 1rem;transform: translate(0, -2px);">@Filter.ShipmentMethod.ShipmentMethodName</span>
                        </div>
                    }
                    @if (Filter.ImportNumber != null)
                    {
                        <div class="d-flex flex-row justify-content-start gap-1 component-section-item">
                            <p class="component-label m-0 fw-bold">Número de importación: </p>
                            <span style="line-height: 1rem;transform: translate(0, -2px);">@Filter.ImportNumber</span>
                        </div>
                    }
                    @if (Filter.EmbarkationPort != null)
                    {
                        <div class="d-flex flex-row justify-content-start gap-1 component-section-item">
                            <p class="component-label m-0 fw-bold">Puerto de embarque: </p>
                            <span style="line-height: 1rem;transform: translate(0, -2px);">@Filter.EmbarkationPort</span>
                        </div>
                    }
                    @if (Filter.ProformaNumber != null)
                    {
                        <div class="d-flex flex-row justify-content-start gap-1 component-section-item">
                            <p class="component-label m-0 fw-bold">Número de proforma: </p>
                            <span style="line-height: 1rem;transform: translate(0, -2px);">@Filter.ProformaNumber</span>
                        </div>
                    }
                    @if (Filter.WarehouseId != null)
                    {
                        <div class="d-flex flex-row justify-content-start gap-1 component-section-item">
                            <p class="component-label m-0 fw-bold">Bodega de llegada: </p>
                            <span style="line-height: 1rem;transform: translate(0, -2px);">@Filter.Warehouse.WarehouseName</span>
                        </div>
                    }
                    <div class="component-section d-flex flex-column justify-content-start pt-2">
                        @if (Filter.ItemReferences.Any())
                        {
                            <p class="component-label m-0 fw-bold">Referencias: </p>
                            @for (int i = 0; i < Filter.ItemReferences.Count(); i++)
                            {
                                <span class="@(i>=2 ? "read-more" : "")" style="@(i>=2 ? "display: none" : "")">(@Filter.ItemReferences[i].Item.Line.LineName) @Filter.ItemReferences[i].Item.ItemName - @Filter.ItemReferences[i].ReferenceName</span>
                            }
                            @if (Filter.ItemReferences.Count() > 2)
                            {
                                <div>
                                    <a href="javascript:;" id="toggleLink" @onclick="ToggleReadMore">Ver más</a>
                                </div>
                            }
                        }
                    </div>
                }
            </div>
        </RadzenColumn>
        <RadzenColumn SizeXL="2" SizeLG="2" SizeMD="12" SizeSM="12" SizeXS="12" SizeXX="12" class="align-self-end">
            <div class="d-flex flex-row justify-content-end align-items-end">
                <RadzenButton ButtonStyle="ButtonStyle.Primary" Icon="save" Text="Guardar PDF" Click="@Download" Variant="Variant.Flat" BusyText="Procesando" IsBusy="@IsBusy" />
            </div>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow AlignItems="AlignItems.Start">
        <RadzenColumn Size="12">
            <RadzenCard style="min-height:600px; overflow-y:auto">
                <div id="order-shipment-report-container">
                    <div class="report">
                        <table>
                            <tr>
                                <td width="50%">
                                    <h2 class="text-left mb-0">Ordenes en tránsito</h2>
                                    <span class="mb-1">@DateTime.Now.ToString(SharedLocalizer["datetime:format"])</span>
                                </td>
                                <td width="50%">
                                    @if (Filter != null)
                                    {
                                        <div class="filters">
                                            <div class="title">Filtros:</div>
                                            <div>
                                                @if (!string.IsNullOrEmpty(Filter.OrderNumber))
                                                {
                                                    <div>
                                                        <div class="type" style="display:inline-block">Número del orden: </div>
                                                        <span>@Filter.OrderNumber</span>
                                                    </div>
                                                }
                                                @if (Filter.CreationDate != null)
                                                {
                                                    <div>
                                                        <div class="type" style="display:inline-block">Fecha de creación: </div>
                                                        <span>@Filter.CreationDate.Value.ToString(SharedLocalizer["date:format"])</span>
                                                    </div>
                                                }
                                                @if (Filter.RequestDate != null)
                                                {
                                                    <div>
                                                        <div class="type" style="display:inline-block">Fecha de solicitud: </div>
                                                        <span>@Filter.RequestDate.Value.ToString(SharedLocalizer["date:format"])</span>
                                                    </div>
                                                }
                                                @if (Filter.ExpectedReceiptDate != null)
                                                {
                                                    <div>
                                                        <div class="type" style="display:inline-block">Fecha esperada de recepción: </div>
                                                        <span>@Filter.ExpectedReceiptDate.Value.ToString(SharedLocalizer["date:format"])</span>
                                                    </div>
                                                }
                                                @if (Filter.RealReceiptDate != null)
                                                {
                                                    <div>
                                                        <div class="type" style="display:inline-block">Fecha real de recepción: </div>
                                                        <span>@Filter.RealReceiptDate.Value.ToString(SharedLocalizer["date:format"])</span>
                                                    </div>
                                                }
                                                @if (Filter.ImportNumber != null)
                                                {
                                                    <div>
                                                        <div class="type" style="display:inline-block">Número de importación: </div>
                                                        <span>@Filter.ImportNumber</span>
                                                    </div>
                                                }
                                                @if (Filter.EmbarkationPort != null)
                                                {
                                                    <div>
                                                        <div class="type" style="display:inline-block">Puerto de embarque: </div>
                                                        <span>@Filter.EmbarkationPort</span>
                                                    </div>
                                                }
                                                @if (Filter.ProformaNumber != null)
                                                {
                                                    <div>
                                                        <div class="type" style="display:inline-block">Número de proforma: </div>
                                                        <span>@Filter.ProformaNumber</span>
                                                    </div>
                                                }
                                                @if (Filter.ProviderId != null)
                                                {
                                                    <div>
                                                        <div class="type" style="display:inline-block">Proveedor: </div>
                                                        <span>@Filter.Provider.ProviderName</span>
                                                    </div>
                                                }
                                                @if (Filter.WarehouseId != null)
                                                {
                                                    <div>
                                                        <div class="type" style="display:inline-block">Bodega de llegada: </div>
                                                        <span>@Filter.Warehouse.WarehouseName</span>
                                                    </div>
                                                }
                                                @if (Filter.ForwarderId != null)
                                                {
                                                    <div>
                                                        <div class="type" style="display:inline-block">Transportadora: </div>
                                                        <span>@Filter.Forwarder.ForwarderName</span>
                                                    </div>
                                                }
                                                @if (Filter.ForwarderAgentId != null)
                                                {
                                                    <div>
                                                        <div class="type" style="display:inline-block">Agente: </div>
                                                        <span>@Filter.ForwarderAgent.ForwarderAgentName</span>
                                                    </div>
                                                }
                                                @if (Filter.ShipmentMethodId != null)
                                                {
                                                    <div>
                                                        <div class="type" style="display:inline-block">Método de envío: </div>
                                                        <span>@Filter.ShipmentMethod.ShipmentMethodName</span>
                                                    </div>
                                                }

                                                @if (Filter.ItemReferences.Any())
                                                {
                                                    <div>
                                                        <div class="type">Referencias: </div>
                                                        @for (int i = 0; i < Filter.ItemReferences.Count(); i++)
                                                        {
                                                            <p>(@Filter.ItemReferences[i].Item.Line.LineName) @Filter.ItemReferences[i].Item.ItemName - @Filter.ItemReferences[i].ReferenceName</p>
                                                        }
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                </td>
                            </tr>
                        </table>
                        <div class="mt-1 border">
                            @if (ViewModel != null)
                            {
                                @for (int o = 0; o < ViewModel.Orders.Count(); o++)
                                {
                                    var order = ViewModel.Orders[o];
                                    <table class="@(o>0?"border-top-1":"")">
                                        <thead>
                                            <tr>
                                                <td colspan="4" width="100%">
                                                    <span class="bold">Número: </span>@order.OrderNumber
                                                </td>
                                            </tr>
                                            <tr>
                                                <td width="25%">
                                                    <span class="bold">Fecha de creación: </span><br />
                                                    @order.CreationDate.ToString(SharedLocalizer["datetime:format"])
                                                </td>
                                                <td width="25%">
                                                    <span class="bold">Fecha de solicitud: </span><br />
                                                    @order.RequestDate.ToString(SharedLocalizer["date:format"])
                                                </td>
                                                <td width="25%">
                                                    <span class="bold">Fecha esperada de recepción: </span><br />
                                                    @order.ExpectedReceiptDate.ToString(SharedLocalizer["date:format"])
                                                </td>
                                                <td width="25%">
                                                    <span class="bold">Fecha real de recepción: </span><br />
                                                    @order.RealReceiptDate?.ToString(SharedLocalizer["date:format"])
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="4" width="100%">
                                                    <span class="bold">Proveedor: </span>@order.ProviderName
                                                </td>
                                            </tr>
                                            <tr>
                                                <td width="25%">
                                                    <span class="bold">Transportadora: </span>@order.Forwarder.ForwarderName
                                                </td>
                                                <td width="25%">
                                                    <span class="bold">Teléfono: </span>@order.Forwarder.Phone
                                                </td>
                                                <td width="25%">
                                                    <span class="bold">Fax: </span>@order.Forwarder.Fax
                                                </td>
                                                <td width="25%">
                                                    <span class="bold">Mail: </span>@order.Forwarder.Email
                                                </td>
                                            </tr>
                                            <tr>
                                                <td width="25%">
                                                    <span class="bold">Agente: </span>@order.ForwarderAgent.ForwarderAgentName
                                                </td>
                                                <td width="25%">
                                                    <span class="bold">Teléfono: </span>@order.ForwarderAgent.Phone
                                                </td>
                                                <td width="25%">
                                                    <span class="bold">Fax: </span>@order.ForwarderAgent.Fax
                                                </td>
                                                <td width="25%">
                                                    <span class="bold">Mail: </span>@order.ForwarderAgent.Email
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="2" width="50%">
                                                    <span class="bold">Número de importación: </span>@order.ImportNumber
                                                </td>
                                                <td colspan="2" width="50%">
                                                    <span class="bold">Método de envío: </span>@order.ShipmentMethodName
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="2" width="50%">
                                                    <span class="bold">Puerto de embarque: </span>@order.EmbarkationPort
                                                </td>
                                                <td colspan="2" width="50%">
                                                    <span class="bold">Número de proforma: </span>@order.ProformaNumber
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="4" width="100%">
                                                    <span class="bold">Bodega de llegada: </span>@order.ArrivalWarehouse
                                                </td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var line in order.Lines)
                                            {
                                                <tr>
                                                    <td colspan="5" width="100%" style="padding:0 !important">
                                                        <p class="title border-bottom-1" style="padding-left: 1em;">Línea: @line.LineCode  - @line.LineName</p>
                                                    </td>
                                                </tr>
                                                @for (int i = 0; i < line.Items.Count(); i++)
                                                {
                                                    var item = line.Items[i];
                                                    <tr>
                                                        <td colspan="5" width="100%" style="padding:0 !important">
                                                            <div style="padding: 0.75rem 0 0 1em !important;">
                                                                <h3 class="text-left m-0 @(i>0?"border-top-1":"")" style="@(i>0?"margin-top: 1em !important;padding-top: 1em;":"")">
                                                                    @item.ItemName
                                                                </h3>
                                                                <p class="m-0">
                                                                    Referencia interna: @item.InternalReference
                                                                </p>
                                                            </div>
                                                            <div style="margin: 0.5em 1.5em 0 1em;">
                                                                <table class="striped border-top-1">
                                                                    <thead>
                                                                        <tr>
                                                                            <th width="30%">Código</th>
                                                                            <th width="40%" class="border-left-1">Referencia</th>
                                                                            <th width="10%" class="border-left-1">Cantidad</th>
                                                                            <th width="10%" class="border-left-1">Peso</th>
                                                                            <th width="10%" class="border-left-1">Volumen</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (var reference in item.References)
                                                                        {
                                                                            <tr>
                                                                                <td width="30%">@reference.ReferenceCode</td>
                                                                                <td width="40%" class="border-left-1">@reference.ReferenceName</td>
                                                                                <td width="10%" class="border-left-1">@reference.Amount.ToString("N0")</td>
                                                                                <td width="10%" class="border-left-1">@(reference.Weight == 0 ? "" : reference.Weight.ToString("N0"))</td>
                                                                                <td width="10%" class="border-left-1">@(reference.Volume == 0 ? "" : reference.Volume.ToString("N0"))</td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                }
                            }
                        </div>
                    </div>
                </div>
            </RadzenCard>
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>