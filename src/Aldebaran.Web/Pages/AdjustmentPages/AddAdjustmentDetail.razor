@page "/add-adjustment-detail"

@attribute [Authorize]

<PageTitle>Agregar Detalle</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save AdjustmentDetail</RadzenAlert>
        <RadzenTemplateForm TItem="Aldebaran.Web.Models.AldebaranDb.AdjustmentDetail" Data="@adjustmentDetail" Visible="@(adjustmentDetail != null)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Q U A N T I T Y" Component="QUANTITY" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@adjustmentDetail.QUANTITY" Name="QUANTITY" />
                    <RadzenRequiredValidator Component="QUANTITY" Text="QUANTITY is required" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Adjustment" Component="Adjustment" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@adjustmentsForADJUSTMENTID" TextProperty="ASPNETUSER_ID" ValueProperty="ADJUSTMENT_ID" AllowClear=true
                        Disabled=@(hasADJUSTMENT_IDValue) Placeholder="Choose Adjustment" style="display: block; width: 100%" @bind-Value="@adjustmentDetail.ADJUSTMENT_ID" Name="ADJUSTMENT_ID"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Item Reference" Component="ItemReference" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@itemReferencesForREFERENCEID" TextProperty="REFERENCE_CODE" ValueProperty="REFERENCE_ID" AllowClear=true
                        Disabled=@(hasREFERENCE_IDValue) Placeholder="Choose ItemReference" style="display: block; width: 100%" @bind-Value="@adjustmentDetail.REFERENCE_ID" Name="REFERENCE_ID"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Warehouse" Component="Warehouse" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@warehousesForWAREHOUSEID" TextProperty="WAREHOUSE_NAME" ValueProperty="WAREHOUSE_ID" AllowClear=true
                        Disabled=@(hasWAREHOUSE_IDValue) Placeholder="Choose Warehouse" style="display: block; width: 100%" @bind-Value="@adjustmentDetail.WAREHOUSE_ID" Name="WAREHOUSE_ID"
                           />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

