@page "/add-adjustment"

@attribute [Authorize]

<PageTitle>Nuevo Ajuste</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Adjustment</RadzenAlert>
        <RadzenTemplateForm TItem="Aldebaran.Web.Models.AldebaranDb.Adjustment" Data="@adjustment" Visible="@(adjustment != null)" Submit="@FormSubmit">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="A D J U S T M E N T D A T E" Component="ADJUSTMENT_DATE" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@adjustment.ADJUSTMENT_DATE" Name="ADJUSTMENT_DATE" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="N O T E S" Component="NOTES" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@adjustment.NOTES" Name="NOTES" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="C R E A T I O N D A T E" Component="CREATION_DATE" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@adjustment.CREATION_DATE" Name="CREATION_DATE" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Adjustment Reason" Component="AdjustmentReason" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@adjustmentReasonsForADJUSTMENTREASONID" TextProperty="ADJUSTMENT_REASON_NAME" ValueProperty="ADJUSTMENT_REASON_ID" AllowClear=true
                         Placeholder="Choose AdjustmentReason" style="display: block; width: 100%" @bind-Value="@adjustment.ADJUSTMENT_REASON_ID" Name="ADJUSTMENT_REASON_ID"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Adjustment Type" Component="AdjustmentType" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@adjustmentTypesForADJUSTMENTTYPEID" TextProperty="ADJUSTMENT_TYPE_NAME" ValueProperty="ADJUSTMENT_TYPE_ID" AllowClear=true
                         Placeholder="Choose AdjustmentType" style="display: block; width: 100%" @bind-Value="@adjustment.ADJUSTMENT_TYPE_ID" Name="ADJUSTMENT_TYPE_ID"
                           />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Aspnetuser" Component="Aspnetuser" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@aspnetusersForASPNETUSERID" TextProperty="Id" ValueProperty="Id" AllowClear=true
                         Placeholder="Choose Aspnetuser" style="display: block; width: 100%" @bind-Value="@adjustment.ASPNETUSER_ID" Name="ASPNETUSER_ID"
                           />
                </RadzenColumn>
            </RadzenRow>
          <RadzenStack  Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

