@page "/edit-customer-order-in-process/{pCustomerOrderInProcessId}"

@attribute [Authorize(Roles = "Admin,Customer Order In Process Editor")]

<PageTitle>Pedido de Articulos</PageTitle>
<RadzenCard>
    <RadzenStack>
        <RadzenTemplateForm TItem="Aldebaran.Web.Models.AldebaranDb.CustomerOrder" Data="@customerOrder" Visible="@(customerOrder != null)" Submit="@FormSubmit">
            <RadzenRow AlignItems="AlignItems.Center">
                <RadzenColumn Size="12">
                    <RadzenText Text="@title" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
                </RadzenColumn>
                <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">@errorMessage</RadzenAlert>
            </RadzenRow>
            <RadzenRow AlignItems="AlignItems.Start" Gap="2rem">
                <RadzenColumn SizeMD="5">
                    <RadzenStack>
                        <RadzenRow />
                        <RadzenColumn SizeMD="3">
                            <RadzenLabel Text="Cliente" class="fw-bold" style="width: 100%" />
                        </RadzenColumn>
                        <RadzenColumn SizeMD="3">
                            <RadzenRow>
                                <span>@customerOrder.Customer.CUSTOMER_NAME</span>
                            </RadzenRow>
                            <RadzenRow>
                                <span>@customerOrder.Customer.CUSTOMER_ADDRESS</span>
                            </RadzenRow>
                            <RadzenRow>
                                <span>@customerOrder.Customer.PHONE1</span>
                            </RadzenRow>
                            <RadzenRow>
                                <span>@customerOrder.Customer.EMAIL1</span>
                            </RadzenRow>
                            <RadzenRow>
                                <span>@customerOrder.Customer.CUSTOMER_ADDRESS, (@customerOrder.Customer.City.Department.Country.COUNTRY_CODE) @customerOrder.Customer.City.Department.DEPARTMENT_NAME - @customerOrder.Customer.City.CITY_NAME </span>
                            </RadzenRow>
                        </RadzenColumn>
                        <RadzenColumn SizeMD="3">
                            <RadzenLabel Text="Fecha de Pedido" class="fw-bold" style="width: 100%" />
                        </RadzenColumn>
                        <RadzenColumn SizeMD="3">
                            <span>@customerOrder.ORDER_DATE</span>
                        </RadzenColumn>
                        <RadzenColumn SizeMD="3">
                            <RadzenLabel Text="Fecha de Pactada de Entrega" class="fw-bold" style="width: 100%" />
                        </RadzenColumn>
                        <RadzenColumn SizeMD="3">
                            <span>@customerOrder.ESTIMATED_DELIVERY_DATE</span>
                        </RadzenColumn>
                        <RadzenRow style="margin-bottom: 1rem">
                            <RadzenColumn SizeMD="3">
                                <RadzenLabel Text="Notas del Cliente" Component="NOTES" class="fw-bold" style="width: 100%" />
                            </RadzenColumn>
                            <RadzenColumn SizeMD="12">
                                <RadzenTextArea Multilie="true" style="display: block; width: 100%" @bind-Value="@customerOrder.CUSTOMER_NOTES" Name="CUSTOMER_NOTES" TabIndex="3" ReadOnly="true" />
                            </RadzenColumn>
                        </RadzenRow>
                        <RadzenRow style="margin-bottom: 1rem">
                            <RadzenColumn SizeMD="3">
                                <RadzenLabel Text="Notas Internas" Component="NOTES" class="fw-bold" style="width: 100%" />
                            </RadzenColumn>
                            <RadzenColumn SizeMD="12">
                                <RadzenTextArea Multilie="true" style="display: block; width: 100%" @bind-Value="@customerOrder.INTERNAL_NOTES" Name="INTERNAL_NOTES" TabIndex="3" ReadOnly="true" />
                            </RadzenColumn>
                        </RadzenRow>
                    </RadzenStack>
                </RadzenColumn>
                <RadzenColumn Size="7">
                    <RadzenStack>
                        <RadzenRow/>
                        <RadzenColumn SizeMD="3">
                            <RadzenLabel Text="Referencias del Pedido" class="fw-bold" style="width: 100%" />
                        </RadzenColumn>
                        <RadzenDataGrid @ref="customerOrderDetailGrid" ColumnWidth="200px" AllowFiltering="false" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
                                        Data="@detailInProcesses" TItem="Aldebaran.Web.Models.ViewModels.DetailInProcess">
                            <Columns>
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.ViewModels.DetailInProcess" Title="Artículo/Referencia">
                                    <Template Context="detail">
                                        <span>(@detail.REFERENCE_DESCRIPTION</span>
                                    </Template>
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.ViewModels.DetailInProcess" Property="PENDING_QUANTITY" Title="Pendiente" Width="100px" />
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.ViewModels.DetailInProcess" Property="PROCESSED_QUANTITY" Title="En Proceso" Width="100px" />
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.ViewModels.DetailInProcess" Property="DELIVERED_QUANTITY" Title="Despachado" Width="100px" />
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.ViewModels.DetailInProcess" Property="THIS_QUANTITY" Title="Este Traslado" Width="100px" />
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.ViewModels.DetailInProcess" Filterable="false" Sortable="false" Width="110px" TextAlign="TextAlign.Center" Pickable="false" Reorderable="false" Resizable="false">
                                    <Template Context="detail">
                                        <RadzenButton Icon="assignment_ind" ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat" Size="ButtonSize.Medium"
                                                      Click="@(args => SendToProcess(detail))" @onclick:stopPropagation="true"
                                                      Visible="@Security.IsInRole("Admin","Customer Order In Process Editor")" title="Enviar Cantidad a Proceso">
                                        </RadzenButton>
                                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                                                      Shade="Shade.Lighter" Variant="Variant.Flat" Visible="@Security.IsInRole("Admin","Customer Order In Process Editor")"
                                                      Click=@(args => CancelToProcess(detail)) @onclick:stopPropagation="true" title="Cancelar Traslado" />
                                    </Template>
                                </RadzenDataGridColumn>
                            </Columns>
                        </RadzenDataGrid>
                    </RadzenStack>
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow AlignItems="Radzen.AlignItems.Center">
                <RadzenColumn Size="12">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                        <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Guardar" Variant="Variant.Flat" BusyText="Procesando" IsBusy="@isSubmitInProgress" />
                        <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancelar" Variant="Variant.Flat" Click="@CancelButtonClick" />
                    </RadzenStack>
                </RadzenColumn>
            </RadzenRow>
        </RadzenTemplateForm>
    </RadzenStack>
</RadzenCard>
