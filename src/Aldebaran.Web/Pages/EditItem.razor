@page "/edit-item"

@attribute [Authorize]
<PageTitle>Edit Item</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Item</RadzenAlert>
        <RadzenTemplateForm TItem="Aldebaran.Web.Models.AldebaranDb.Item" Data="@item" Visible="@(item != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="I N T E R N A L R E F E R E N C E" Variant="Variant.Flat">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@item.INTERNAL_REFERENCE" Name="INTERNAL_REFERENCE" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="INTERNAL_REFERENCE" Text="INTERNAL_REFERENCE is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="I T E M N A M E" Variant="Variant.Flat">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@item.ITEM_NAME" Name="ITEM_NAME" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="ITEM_NAME" Text="ITEM_NAME is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="P R O V I D E R R E F E R E N C E" Variant="Variant.Flat">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@item.PROVIDER_REFERENCE" Name="PROVIDER_REFERENCE" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="PROVIDER_REFERENCE" Text="PROVIDER_REFERENCE is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="P R O V I D E R I T E M N A M E" Variant="Variant.Flat">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@item.PROVIDER_ITEM_NAME" Name="PROVIDER_ITEM_NAME" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="PROVIDER_ITEM_NAME" Text="PROVIDER_ITEM_NAME is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="F O B C O S T" Variant="Variant.Flat">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@item.FOB_COST" Name="FOB_COST" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="FOB_COST" Text="FOB_COST is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="N O T E S" Variant="Variant.Flat">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@item.NOTES" Name="NOTES" />
              </ChildContent>
            </RadzenFormField>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="I S E X T E R N A L I N V E N T O R Y" Component="IS_EXTERNAL_INVENTORY" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@item.IS_EXTERNAL_INVENTORY" Name="IS_EXTERNAL_INVENTORY" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenFormField Text="C I F C O S T" Variant="Variant.Flat">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@item.CIF_COST" Name="CIF_COST" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="CIF_COST" Text="CIF_COST is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="V O L U M E" Variant="Variant.Flat">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@item.VOLUME" Name="VOLUME" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="W E I G H T" Variant="Variant.Flat">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@item.WEIGHT" Name="WEIGHT" />
              </ChildContent>
            </RadzenFormField>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="I S D O M E S T I C P R O D U C T" Component="IS_DOMESTIC_PRODUCT" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@item.IS_DOMESTIC_PRODUCT" Name="IS_DOMESTIC_PRODUCT" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="I S A C T I V E" Component="IS_ACTIVE" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@item.IS_ACTIVE" Name="IS_ACTIVE" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="I S C A T A L O G V I S I B L E" Component="IS_CATALOG_VISIBLE" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@item.IS_CATALOG_VISIBLE" Name="IS_CATALOG_VISIBLE" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenFormField Text="Measure Unit" Variant="Variant.Flat">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@measureUnitsForCIFMEASUREUNITID" TextProperty="MEASURE_UNIT_NAME" ValueProperty="MEASURE_UNIT_ID" AllowClear=true
                          style="display: block; width: 100%" @bind-Value="@item.CIF_MEASURE_UNIT_ID" Name="CIF_MEASURE_UNIT_ID"
                           />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Currency" Variant="Variant.Flat">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@currenciesForCURRENCYID" TextProperty="CURRENCY_NAME" ValueProperty="CURRENCY_ID" AllowClear=true
                          style="display: block; width: 100%" @bind-Value="@item.CURRENCY_ID" Name="CURRENCY_ID"
                           />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Measure Unit1" Variant="Variant.Flat">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@measureUnitsForFOBMEASUREUNITID" TextProperty="MEASURE_UNIT_NAME" ValueProperty="MEASURE_UNIT_ID" AllowClear=true
                          style="display: block; width: 100%" @bind-Value="@item.FOB_MEASURE_UNIT_ID" Name="FOB_MEASURE_UNIT_ID"
                           />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Line" Variant="Variant.Flat">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@linesForLINEID" TextProperty="LINE_CODE" ValueProperty="LINE_ID" AllowClear=true
                          style="display: block; width: 100%" @bind-Value="@item.LINE_ID" Name="LINE_ID"
                           />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

