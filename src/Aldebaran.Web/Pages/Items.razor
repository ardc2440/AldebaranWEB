@page "/items"

@attribute [Authorize]
<PageTitle>Items</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Artículos" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenSplitButton Icon="get_app" Text="Export" Click="@ExportClick" Variant="Variant.Flat" Shade="Shade.Lighter">
                    <RadzenSplitButtonItem Text="Excel" Value="xlsx" />
                    <RadzenSplitButtonItem Text="CSV" Value="csv" />
                </RadzenSplitButton>
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenTextBox Placeholder="Search ..." style="display: block; width: 100%" @oninput="@Search" />
    <RadzenRow>
        <RadzenColumn SizeMD=12>
            <RadzenDataGrid @ref="grid0" ColumnWidth="200px" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
                            Data="@items" TItem="Aldebaran.Web.Models.AldebaranDb.Item" RowDoubleClick="@EditRow" RowExpand=@GetChildData AllowColumnPicking="true" AllowColumnResize="true" AllowFilterDateInput="false" AllowMultiColumnSorting="true" AllowVirtualization="true" ColumnsPickerAllowFiltering="true" EditMode="Radzen.DataGridEditMode.Single" ExpandMode="Radzen.DataGridExpandMode.Single" Responsive="true">
                <Columns>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.Item" Property="INTERNAL_REFERENCE" Title="Referencia interna">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.Item" Property="ITEM_NAME" Title="Nombre">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.Item" Property="PROVIDER_REFERENCE" Title="Referencia proveedor">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.Item" Property="PROVIDER_ITEM_NAME" Title="Nombre item proveedor">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.Item" Property="FOB_COST" Title="Costo FOB" Visible="false">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.Item" Property="NOTES" Title="Notas" Visible="false">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.Item" Property="IS_EXTERNAL_INVENTORY" Title="Inventario externo">
                        <Template Context="item">
                            <RadzenCheckBox @bind-Value="@item.IS_EXTERNAL_INVENTORY" Name="IS_EXTERNAL_INVENTORY" Disabled="true"></RadzenCheckBox>
                        </Template>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.Item" Property="CIF_COST" Title="Costo CIF" Visible="false">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.Item" Property="VOLUME" Title="Volumne" Visible="false">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.Item" Property="WEIGHT" Title="Peso" Visible="false">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.Item" Property="IS_DOMESTIC_PRODUCT" Title="Producto Nacional">
                        <Template Context="item">
                            <RadzenCheckBox @bind-Value="@item.IS_DOMESTIC_PRODUCT" Name="IS_DOMESTIC_PRODUCT" Disabled="true"></RadzenCheckBox>
                        </Template>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.Item" Property="IS_ACTIVE" Title="Activo">
                        <Template Context="item">
                            <RadzenCheckBox @bind-Value="@item.IS_ACTIVE" Name="IS_ACTIVE" Disabled="true"></RadzenCheckBox>
                        </Template>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.Item" Property="IS_CATALOG_VISIBLE" Title="Visible en catálogo">
                        <Template Context="item">
                            <RadzenCheckBox @bind-Value="@item.IS_CATALOG_VISIBLE" Name="IS_CATALOG_VISIBLE" Disabled="true"></RadzenCheckBox>
                        </Template>
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.Item" Property="MeasureUnit.MEASURE_UNIT_NAME" Title="Unidad FOB" Visible="false">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.Item" Property="Currency.CURRENCY_NAME" Title="Moneda" Visible="false">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.Item" Property="MeasureUnit1.MEASURE_UNIT_NAME" Title="Unidad CIF" Visible="false">
                    </RadzenDataGridColumn>
                    <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.Item" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center" Pickable="false">
                        <Template Context="item">
                            <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                                          Shade="Shade.Lighter" Variant="Variant.Flat"
                                          Click=@(args => GridDeleteButtonClick(args, item)) @onclick:stopPropagation="true" />
                        </Template>
                    </RadzenDataGridColumn>
                </Columns>
                <Template Context="item">
                    <RadzenStack Class="rz-my-8">
                        <RadzenRow Gap="0" AlignItems="AlignItems.Center">
                            <RadzenColumn Size="12" SizeMD="6">
                                <RadzenText Visible="@(item != null)" Text="Referencias" TextStyle="TextStyle.H4" TagName="TagName.H2" style="margin: 0" />
                            </RadzenColumn>
                            <RadzenColumn Size="12" SizeMD="6">
                                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                                    <RadzenButton Visible="@(item != null)" Icon="add_circle_outline" Text="Add" Click=@(args => ItemReferencesAddButtonClick(args,item)) />
                                </RadzenStack>
                            </RadzenColumn>
                        </RadzenRow>
                        <RadzenDataGrid ColumnWidth="200px" Visible="@(item != null)" @ref=ItemReferencesDataGrid AllowFiltering="true" FilterMode="Radzen.FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
                                        Data="@item?.ItemReferences" TItem="Aldebaran.Web.Models.AldebaranDb.ItemReference" RowDoubleClick="@(args => ItemReferencesRowSelect(args, item))" AllowVirtualization="true" AllowColumnReorder="true" AllowColumnPicking="true">
                            <Columns>
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.ItemReference" Property="REFERENCE_CODE" Title="Referencia">
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.ItemReference" Property="PROVIDER_REFERENCE_CODE" Title="Referencia proveedor">
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.ItemReference" Property="REFERENCE_NAME" Title="Nombre">
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.ItemReference" Property="PROVIDER_REFERENCE_NAME" Title="Nombre referencia proveedor">
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.ItemReference" Property="NOTES" Title="Notas" Visible="false">
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.ItemReference" Property="IS_ACTIVE" Title="Activo">
                                    <Template Context="itemReferenceChild">
                                        <RadzenCheckBox @bind-Value="@itemReferenceChild.IS_ACTIVE" Name="IS_ACTIVE" Disabled="true"></RadzenCheckBox>
                                    </Template>
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.ItemReference" Property="IS_SOLD_OUT" Title="Agotado" Visible="false">
                                    <Template Context="itemReferenceChild">
                                        <RadzenCheckBox @bind-Value="@itemReferenceChild.IS_SOLD_OUT" Name="IS_SOLD_OUT" Disabled="true"></RadzenCheckBox>
                                    </Template>
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.ItemReference" Property="ALARM_MINIMUM_QUANTITY" Title="Cantidad mínima" Visible="false">
                                </RadzenDataGridColumn>
                                <RadzenDataGridColumn TItem="Aldebaran.Web.Models.AldebaranDb.ItemReference" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center" Pickable="false">
                                    <Template Context="itemReferenceChild">
                                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium" Shade="Shade.Lighter" Variant="Variant.Flat"
                                                      Click=@(args => ItemReferencesDeleteButtonClick(args, itemReferenceChild)) @onclick:stopPropagation="true" />
                                    </Template>
                                </RadzenDataGridColumn>
                            </Columns>
                        </RadzenDataGrid>
                    </RadzenStack>
                </Template>
            </RadzenDataGrid>

        </RadzenColumn>
    </RadzenRow>
</RadzenStack>
