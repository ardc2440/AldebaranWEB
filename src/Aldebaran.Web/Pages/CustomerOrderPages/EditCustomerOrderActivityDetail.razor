@attribute [Authorize(Roles = "Admin,Customer Order Activity Editor")]

<PageTitle>Modificar Tipo de Actividad</PageTitle>

<RadzenColumn SizeMD=12>
    <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">@alertMessage</RadzenAlert>
    <RadzenTemplateForm TItem="Aldebaran.Application.Services.Models.CustomerOrderActivityDetail" Data="@CustomerOrderActivityDetail" Visible="@(CustomerOrderActivityDetail != null)" Submit="@FormSubmit">
        <RadzenStack style="margin-bottom: 1rem">
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Modificar Tipo de Actividad" Component="Warehouse" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDropDownDataGrid Data="@activityTypesForACTIVITY_ID" Title="ACTIVITY_TYPE_NAME" TextProperty="ActivityType.ActivitiTypeName" ValueProperty="ActivityTypeId" AllowClear=true
                                            Disabled=@(hasACTIVITY_TYPE_IDValue) Placeholder="Seleccione un tipo de actividad" style="display: block; width: 100%" @bind-Value="@CustomerOrderActivityDetail.ActivityTypeId" Name="ACTIVITY_TYPE_ID" TabIndex="2" />
                    <RadzenRequiredValidator Component="ACTIVITY_TYPE_ID" DefaultValue="0" Text="El Tipo de Actividad es requerida"></RadzenRequiredValidator>
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 2rem">
                <RadzenFormField Text="Empleado" Gap="2rem" Variant="Variant.Text" Style="width: 100%;">
                    <ChildContent>
                        <RadzenDropDownDataGrid Data="@employeesForACTIVITYEMPLOYEEID" TextProperty="FullName" ValueProperty="EmployeeId" AllowClear=true
                                                Disabled=@(hasACTIVITY_EMPLOYEE_IDValue) style="display: block; width: 100%" @bind-Value="@CustomerOrderActivityDetail.ActivityEmployeeId" Name="ACTIVITY_EMPLOYEE_ID" FilterCaseSensitivity="Radzen.FilterCaseSensitivity.CaseInsensitive" AllowFilteringByAllStringColumns="true" Placeholder="Seleccione un Empleado">
                            <Columns>
                                <RadzenDropDownDataGridColumn Property="EMPLOYEE.IdentityType.IdentityTypeName" Title="Tipo de Identificación" />
                                <RadzenDropDownDataGridColumn Property="IdentityNumber" Title="Número de Identificación" />
                                <RadzenDropDownDataGridColumn Property="FullName" Title="Nombre Completo" />
                            </Columns>
                        </RadzenDropDownDataGrid>
                    </ChildContent>
                </RadzenFormField>
                <RadzenRequiredValidator Component="ACTIVITY_EMPLOYEE_ID" DefaultValue="0" Text="El Empleado de la actividad es requerido"></RadzenRequiredValidator>
            </RadzenRow>
        </RadzenStack>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
            <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Guardar" Variant="Variant.Flat" BusyText="Procesando" IsBusy="@isSubmitInProgress" />
            <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancelar" Variant="Variant.Flat" Click="@CancelButtonClick" />
        </RadzenStack>
    </RadzenTemplateForm>
</RadzenColumn>

