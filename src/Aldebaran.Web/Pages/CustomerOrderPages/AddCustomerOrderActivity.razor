@page "/add-customer-order-activity/{CustomerOrderId}"

@attribute [Authorize(Roles = "Admin,Customer Order Activities Editor")]
@using Aldebaran.Web.Resources.LocalizedControls;
@inject Aldebaran.Web.Resources.ISharedStringLocalizer SharedLocalizer

<PageTitle>Pedido de Articulos</PageTitle>
<RadzenCard>
    <RadzenTemplateForm TItem="Aldebaran.Application.Services.Models.CustomerOrderActivity" Data="@customerOrderActivity" Visible="@(customerOrderActivity != null)" Submit="@FormSubmit">
        <RadzenStack>
            <RadzenRow AlignItems="AlignItems.Center">
                <RadzenColumn Size="12">
                    <RadzenText Text="@title" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
                    <hr>
                </RadzenColumn>
                <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">
                    @errorMessage
                </RadzenAlert>
            </RadzenRow>
            <RadzenRow AlignItems="AlignItems.Start" Gap="2rem">
                <RadzenColumn SizeMD="6">
                    <RadzenStack>
                        <RadzenFormField Text="Área" Gap="2rem" Variant="Variant.Text" Style="width: 100%;">
                            <ChildContent>
                                <RadzenDropDownDataGrid @ref="areasGrid" Data="@areasForAREAID" TextProperty="AreaName" ValueProperty="AreaId" AllowClear=false Change="@OnAreaChange"
                                                        style="display: block; width: 100%" @bind-Value="@customerOrderActivity.AreaId" Name="AREA_ID" FilterCaseSensitivity="Radzen.FilterCaseSensitivity.CaseInsensitive"
                                                        AllowFilteringByAllStringColumns="true" Placeholder="Seleccione un área" TabIndex="0">
                                    <Columns>
                                        <RadzenDropDownDataGridColumn Property="AreaCode" Title="Código" />
                                        <RadzenDropDownDataGridColumn Property="AreaName" Title="Nombre" />
                                    </Columns>
                                </RadzenDropDownDataGrid>
                            </ChildContent>
                            <Helper>
                                <RadzenRequiredValidator Component="AREA_ID" DefaultValue="0" Text="El área es requerida"></RadzenRequiredValidator>
                            </Helper>
                        </RadzenFormField>
                        <RadzenFormField Text="Empleado" Gap="2rem" Variant="Variant.Text" Style="width: 100%;">
                            <ChildContent>
                                <RadzenDropDownDataGrid Data="@employeesForEMPLOYEEID" TextProperty="FullName" ValueProperty="EmployeeId" AllowClear=true
                                                        style="display: block; width: 100%" @bind-Value="@customerOrderActivity.EmployeeId" Name="EMPLOYEE_ID" TabIndex="1"
                                                        FilterCaseSensitivity="Radzen.FilterCaseSensitivity.CaseInsensitive" AllowFilteringByAllStringColumns="true" Placeholder="Seleccione un empleado">
                                    <Columns>
                                        <RadzenDropDownDataGridColumn Property="EMPLOYEE.IdentityType.IdentityTypeName" Title="Tipo de identificación" />
                                        <RadzenDropDownDataGridColumn Property="IdentityNumber" Title="Número de identificación" />
                                        <RadzenDropDownDataGridColumn Property="FullName" Title="Nombre completo" />
                                    </Columns>
                                </RadzenDropDownDataGrid>
                            </ChildContent>
                            <Helper>
                                <RadzenRequiredValidator Component="EMPLOYEE_ID" DefaultValue="0" Text="El empleado es requerido"></RadzenRequiredValidator>
                            </Helper>
                        </RadzenFormField>
                        <RadzenFormField Text="Fecha de la actividad" Variant="Variant.Text" Style="width: 100%;">
                            <ChildContent>
                                <RadzenDatePicker DateFormat="@SharedLocalizer["date:format"]" style="display: block; width: 100%" @bind-Value="@customerOrderActivity.ActivityDate"
                                TabIndex="2" Name="ACTIVITY_DATE" />
                            </ChildContent>
                            <Helper>
                                <RadzenRequiredValidator Component="ACTIVITY_DATE" Text="La fecha de la actividad es requerida" />
                            </Helper>
                        </RadzenFormField>
                        <RadzenFormField Text="Notas" Variant="Variant.Text" Style="width: 100%;">
                            <ChildContent>
                                <RadzenTextArea Multilie="true" style="display: block; width: 100%" @bind-Value="@customerOrderActivity.Notes" Name="NOTES" TabIndex="3" />
                            </ChildContent>
                        </RadzenFormField>
                    </RadzenStack>
                </RadzenColumn>
                <RadzenColumn Size="6">
                    <RadzenStack>
                        <RadzenColumn Size="6">
                            <RadzenText Text="Detalles" TextStyle="TextStyle.H5" TagName="TagName.H1" style="margin: 0" />
                        </RadzenColumn>
                        <RadzenRow Gap="0" AlignItems="AlignItems.Center">
                            <RadzenColumn Size="12">
                                <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Start" Gap="0.5rem">
                                    <RadzenButton Icon="add_circle_outline" Text="Nuevo" Click="@AddCustomerOrderActivityDetail" />
                                </RadzenStack>
                            </RadzenColumn>
                        </RadzenRow>
                        <LocalizedDataGrid @ref="customerOrderActivityDetailsGrid" ColumnWidth="200px" AllowFiltering="true" FilterMode="Radzen.FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
                                           Data="@customerOrderActivityDetails" TItem="Aldebaran.Application.Services.Models.CustomerOrderActivityDetail">
                            <Columns>
                                <RadzenDataGridColumn TItem="Aldebaran.Application.Services.Models.CustomerOrderActivityDetail" Property="ActivityType.ActivityTypeName" Title="Tipo de actividad" Width="100px" />
                                <RadzenDataGridColumn TItem="Aldebaran.Application.Services.Models.CustomerOrderActivityDetail" Property="ActivityEmployee.FullName" Title="Ejecutor" Width="100px" />
                                <RadzenDataGridColumn TItem="Aldebaran.Application.Services.Models.CustomerOrderActivityDetail" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                                    <Template Context="detail">
                                        <RadzenButton Icon="edit" ButtonStyle="ButtonStyle.Light" Variant="Variant.Flat" Size="ButtonSize.Medium"
                                                      Click="@(args => EditCustomerOrderActivityDetail(args, detail))" @onclick:stopPropagation="true">
                                        </RadzenButton>
                                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                                                      Shade="Shade.Lighter" Variant="Variant.Flat"
                                                      Click=@(args => DeleteCustomerOrderActivityDetail(args, detail)) @onclick:stopPropagation="true" />
                                    </Template>
                                </RadzenDataGridColumn>
                            </Columns>
                        </LocalizedDataGrid>
                    </RadzenStack>
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow AlignItems="Radzen.AlignItems.Center">
                <RadzenColumn Size="12">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                        <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Guardar" Variant="Variant.Flat" BusyText="Procesando" IsBusy="@isSubmitInProgress" />
                        <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancelar" Variant="Variant.Flat" Click="@CancelButtonClick" />
                    </RadzenStack>
                </RadzenColumn>
            </RadzenRow>
        </RadzenStack>
    </RadzenTemplateForm>
</RadzenCard>
