@attribute [Authorize(Roles="Admin,Item Editor")]
@using ServiceModel = Aldebaran.Application.Services.Models;

<RadzenColumn SizeMD=12>
    <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" @bind-Visible="@IsErrorVisible">No se ha podido actualizar el artículo</RadzenAlert>
    <RadzenTemplateForm TItem="ServiceModel.Item" Data="@Item" Visible="@(Item != null)" Submit="@FormSubmit">
        <RadzenStack>
            zenStack>
            <RadzenFormField Text="Nombre" Variant="Variant.Text">
                <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@Item.ItemName" Name="ItemName" />
                </ChildContent>
                <Helper>
                    <RadzenRequiredValidator Component="ItemName" Text="Nombre es requerido" />
                </Helper>
            </RadzenFormField>
            <RadzenRow AlignItems="Radzen.AlignItems.Start">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Referencia interna" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenTextBox style="display: block; width: 100%" @bind-Value="@Item.InternalReference" Name="InternalReference" />
                        </ChildContent>
                        <Helper>
                            <RadzenRequiredValidator Component="InternalReference" Text="Referencia interna es requerida" />
                        </Helper>
                    </RadzenFormField>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenColumn Size="12" SizeMD="6">
                        <RadzenRow style="margin-bottom: 1rem; width:100%">
                            <RadzenCheckBox @bind-Value="@Item.IsActive" Name="IsActive" />
                            <RadzenLabel Text="Activo" Component="IsActive" />
                        </RadzenRow>
                    </RadzenColumn>
                    <RadzenColumn Size="12" SizeMD="6">
                        <RadzenRow style="margin-bottom: 1rem; width:100%">
                            <RadzenCheckBox @bind-Value="@Item.IsDomesticProduct" Name="IsDomesticProduct" />
                            <RadzenLabel Text="Producto Nacional" Component="IsDomesticProduct" />
                        </RadzenRow>
                    </RadzenColumn>
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow AlignItems="Radzen.AlignItems.Start">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Línea" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenDropDownDataGrid Data="@Lines" TextProperty="LineName" ValueProperty="LineId" AllowClear=true
                                                    style="display: block; width: 100%" @bind-Value="@Item.LineId" Name="LineId">
                                <Columns>
                                    <RadzenDropDownDataGridColumn Property="LineCode" Title="Código" />
                                    <RadzenDropDownDataGridColumn Property="LineName" Title="Nombre" />
                                </Columns>
                            </RadzenDropDownDataGrid>
                        </ChildContent>
                        <Helper>
                            <RadzenNumericRangeValidator Component="LineId" Min="1" Text="Línea es requerida" />
                        </Helper>
                    </RadzenFormField>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Moneda" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenDropDownDataGrid Data="@Currencies" TextProperty="CurrencyName" ValueProperty="CurrencyId" AllowClear=true
                                                    style="display: block; width: 100%" @bind-Value="@Item.CurrencyId" Name="CurrencyId">
                                <Columns>
                                    <RadzenDropDownDataGridColumn Property="CurrencyName" Title="Nombre" />
                                </Columns>
                            </RadzenDropDownDataGrid>
                        </ChildContent>
                        <Helper>
                            <RadzenNumericRangeValidator Component="CurrencyId" Min="1" Text="Moneda es requerida" />
                        </Helper>
                    </RadzenFormField>
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow AlignItems="Radzen.AlignItems.Start">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Volumen" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenNumeric style="display: block; width: 100%" @bind-Value="@Item.Volume" Name="Volume" />
                        </ChildContent>
                        <Helper>
                            <RadzenNumericRangeValidator Component="Volume" Min="1" Text="Volumen debe ser mayor a 0" />
                        </Helper>
                    </RadzenFormField>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Peso" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenNumeric style="display: block; width: 100%" @bind-Value="@Item.Weight" Name="Weight" />
                        </ChildContent>
                        <Helper>
                            <RadzenNumericRangeValidator Component="Weight" Min="1" Text="Peso debe ser mayor a 0" />
                        </Helper>
                    </RadzenFormField>
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow AlignItems="Radzen.AlignItems.Start">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Referencia del proveedor" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenTextBox style="display: block; width: 100%" @bind-Value="@Item.ProviderReference" Name="ProviderReference" />
                        </ChildContent>
                        <Helper>
                            <RadzenRequiredValidator Component="ProviderReference" Text="Referencia del proveedor es requerida" />
                        </Helper>
                    </RadzenFormField>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Nombre del artículo en el proveedor" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenTextBox style="display: block; width: 100%" @bind-Value="@Item.ProviderItemName" Name="ProviderItemName" />
                        </ChildContent>
                        <Helper>
                            <RadzenRequiredValidator Component="ProviderItemName" Text="Nombre es requerido" />
                        </Helper>
                    </RadzenFormField>
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow AlignItems="Radzen.AlignItems.Start">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Unidad FOB" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenDropDownDataGrid Data="@MeasureUnits" TextProperty="MeasureUnitName" ValueProperty="MeasureUnitId" AllowClear=true
                                                    style="display: block; width: 100%" @bind-Value="@Item.FobMeasureUnitId" Name="FobMeasureUnitId">
                                <Columns>
                                    <RadzenDropDownDataGridColumn Property="MeasureUnitName" Title="Nombre" />
                                </Columns>
                            </RadzenDropDownDataGrid>
                        </ChildContent>
                        <Helper>
                            <RadzenNumericRangeValidator Component="FobMeasureUnitId" Min="1" Text="Unidad FOB es requerida" />
                        </Helper>
                    </RadzenFormField>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Costo FOB" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenNumeric style="display: block; width: 100%" @bind-Value="@Item.FobCost" Name="FobCost" />
                        </ChildContent>
                        <Helper>
                            <RadzenNumericRangeValidator Component="FobCost" Min="1" Text="Costo debe ser mayor a 0" />
                        </Helper>
                    </RadzenFormField>
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow AlignItems="Radzen.AlignItems.Start">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Unidad CIF" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenDropDownDataGrid Data="@MeasureUnits" TextProperty="MeasureUnitName" ValueProperty="MeasureUnitId" AllowClear=true
                                                    style="display: block; width: 100%" @bind-Value="@Item.CifMeasureUnitId" Name="CifMeasureUnitId">
                                <Columns>
                                    <RadzenDropDownDataGridColumn Property="MeasureUnitName" Title="Nombre" />
                                </Columns>
                            </RadzenDropDownDataGrid>
                        </ChildContent>
                    </RadzenFormField>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Costo CIF" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenNumeric style="display: block; width: 100%" @bind-Value="@Item.CifCost" Name="CifCost" />
                        </ChildContent>
                    </RadzenFormField>
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow AlignItems="Radzen.AlignItems.Start">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenRow style="margin-bottom: 1rem; width:100%">
                        <RadzenCheckBox @bind-Value="@Item.IsExternalInventory" Name="IsExternalInventory" />
                        <RadzenLabel Text="Inventario externo" Component="IsExternalInventory" />
                    </RadzenRow>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenRow style="margin-bottom: 1rem; width:100%">
                        <RadzenCheckBox @bind-Value="@Item.IsCatalogVisible" Name="IsCatalogVisible" />
                        <RadzenLabel Text="Visible en catálogo" Component="IsCatalogVisible" />
                    </RadzenRow>
                </RadzenColumn>
            </RadzenRow>
            <RadzenFormField Text="Notas" Variant="Variant.Text">
                <ChildContent>
                    <RadzenTextArea style="display: block; width: 100%" @bind-Value="@Item.Notes" Name="Notes" Rows="3"></RadzenTextArea>
                </ChildContent>
            </RadzenFormField>
        </RadzenStack>
        <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
            <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Guardar" Variant="Variant.Flat" BusyText="Procesando..." IsBusy="@IsSubmitInProgress"/>
            <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancelar" Variant="Variant.Flat" Click="@CancelButtonClick" />
        </RadzenStack>
    </RadzenTemplateForm>
</RadzenColumn>

