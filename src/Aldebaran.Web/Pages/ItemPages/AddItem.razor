@page "/add-item"

@attribute [Authorize]
<PageTitle>Nuevo artículo</PageTitle>
<RadzenColumn SizeMD=12>
    <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">No se ha podido crear el artículo</RadzenAlert>
    <RadzenTemplateForm TItem="Aldebaran.Web.Models.AldebaranDb.Item" Data="@item" Visible="@(item != null)" Submit="@FormSubmit">
        <RadzenStack>
            <RadzenFormField Text="Nombre" Variant="Variant.Text">
                <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@item.ITEM_NAME" Name="ITEM_NAME" />
                </ChildContent>
                <Helper>
                    <RadzenRequiredValidator Component="ITEM_NAME" Text="Nombre es requerido" />
                </Helper>
            </RadzenFormField>
            <RadzenRow AlignItems="Radzen.AlignItems.Start">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Referencia interna" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenTextBox style="display: block; width: 100%" @bind-Value="@item.INTERNAL_REFERENCE" Name="INTERNAL_REFERENCE" />
                        </ChildContent>
                        <Helper>
                            <RadzenRequiredValidator Component="INTERNAL_REFERENCE" Text="Referencia interna es requerida" />
                        </Helper>
                    </RadzenFormField>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenColumn Size="12" SizeMD="6">
                        <RadzenRow style="margin-bottom: 1rem; width:100%">
                            <RadzenCheckBox @bind-Value="@item.IS_ACTIVE" Name="IS_ACTIVE" />
                            <RadzenLabel Text="Activo" Component="IS_ACTIVE" />
                        </RadzenRow>
                    </RadzenColumn>
                    <RadzenColumn Size="12" SizeMD="6">
                        <RadzenRow style="margin-bottom: 1rem; width:100%">
                            <RadzenCheckBox @bind-Value="@item.IS_DOMESTIC_PRODUCT" Name="IS_DOMESTIC_PRODUCT" />
                            <RadzenLabel Text="Producto Nacional" Component="IS_DOMESTIC_PRODUCT" />
                        </RadzenRow>
                    </RadzenColumn>
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow AlignItems="Radzen.AlignItems.Start">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Línea" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenDropDownDataGrid Data="@linesForLINEID" TextProperty="LINE_NAME" ValueProperty="LINE_ID" AllowClear=true
                                                    style="display: block; width: 100%" @bind-Value="@item.LINE_ID" Name="LINE_ID">
                                <Columns>
                                    <RadzenDropDownDataGridColumn Property="LINE_CODE" Title="Código" />
                                    <RadzenDropDownDataGridColumn Property="LINE_NAME" Title="Nombre" />
                                </Columns>
                            </RadzenDropDownDataGrid>
                        </ChildContent>
                        <Helper>
                            <RadzenNumericRangeValidator Component="LINE_ID" Min="1" Text="Línea es requerida" />
                        </Helper>
                    </RadzenFormField>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Moneda" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenDropDownDataGrid Data="@currenciesForCURRENCYID" TextProperty="CURRENCY_NAME" ValueProperty="CURRENCY_ID" AllowClear=true
                                                    style="display: block; width: 100%" @bind-Value="@item.CURRENCY_ID" Name="CURRENCY_ID">
                                <Columns>
                                    <RadzenDropDownDataGridColumn Property="CURRENCY_NAME" Title="Nombre" />
                                </Columns>
                            </RadzenDropDownDataGrid>
                        </ChildContent>
                    </RadzenFormField>
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow AlignItems="Radzen.AlignItems.Start">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Volumen" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenNumeric style="display: block; width: 100%" @bind-Value="@item.VOLUME" Name="VOLUME" />
                        </ChildContent>
                        <Helper>
                            <RadzenNumericRangeValidator Component="VOLUME" Min="1" Text="Volumen debe ser mayor a 0" />
                        </Helper>
                    </RadzenFormField>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Peso" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenNumeric style="display: block; width: 100%" @bind-Value="@item.WEIGHT" Name="WEIGHT" />
                        </ChildContent>
                        <Helper>
                            <RadzenNumericRangeValidator Component="WEIGHT" Min="1" Text="Peso debe ser mayor a 0" />
                        </Helper>
                    </RadzenFormField>
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow AlignItems="Radzen.AlignItems.Start">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Referencia del proveedor" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenTextBox style="display: block; width: 100%" @bind-Value="@item.PROVIDER_REFERENCE" Name="PROVIDER_REFERENCE" />
                        </ChildContent>
                        <Helper>
                            <RadzenRequiredValidator Component="PROVIDER_REFERENCE" Text="Referencia del proveedor es requerida" />
                        </Helper>
                    </RadzenFormField>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Nombre item proveedor" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenTextBox style="display: block; width: 100%" @bind-Value="@item.PROVIDER_ITEM_NAME" Name="PROVIDER_ITEM_NAME" />
                        </ChildContent>
                        <Helper>
                            <RadzenRequiredValidator Component="PROVIDER_ITEM_NAME" Text="Nombre item proveedor es requerido" />
                        </Helper>
                    </RadzenFormField>
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow AlignItems="Radzen.AlignItems.Start">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Unidad FOB" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenDropDownDataGrid Data="@measureUnitsForFOBMEASUREUNITID" TextProperty="MEASURE_UNIT_NAME" ValueProperty="MEASURE_UNIT_ID" AllowClear=true
                                                    style="display: block; width: 100%" @bind-Value="@item.FOB_MEASURE_UNIT_ID" Name="FOB_MEASURE_UNIT_ID">
                                <Columns>
                                    <RadzenDropDownDataGridColumn Property="MEASURE_UNIT_NAME" Title="Nombre" />
                                </Columns>
                            </RadzenDropDownDataGrid>
                        </ChildContent>
                    </RadzenFormField>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Costo FOB" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenNumeric style="display: block; width: 100%" @bind-Value="@item.FOB_COST" Name="FOB_COST" />
                        </ChildContent>
                        <Helper>
                            <RadzenNumericRangeValidator Component="FOB_COST" Min="1" Text="Costo debe ser mayor a 0" />
                        </Helper>
                    </RadzenFormField>
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow AlignItems="Radzen.AlignItems.Start">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Unidad CIF" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenDropDownDataGrid Data="@measureUnitsForCIFMEASUREUNITID" TextProperty="MEASURE_UNIT_NAME" ValueProperty="MEASURE_UNIT_ID" AllowClear=true
                                                    style="display: block; width: 100%" @bind-Value="@item.CIF_MEASURE_UNIT_ID" Name="CIF_MEASURE_UNIT_ID">
                                <Columns>
                                    <RadzenDropDownDataGridColumn Property="MEASURE_UNIT_NAME" Title="Nombre" />
                                </Columns>
                            </RadzenDropDownDataGrid>
                        </ChildContent>
                    </RadzenFormField>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenFormField Text="Costo CIF" Variant="Variant.Text" Style="width: 100%;">
                        <ChildContent>
                            <RadzenNumeric style="display: block; width: 100%" @bind-Value="@item.CIF_COST" Name="CIF_COST" />
                        </ChildContent>
                        <Helper>
                            <RadzenNumericRangeValidator Component="CIF_COST" Min="1" Text="Costo debe ser mayor a 0" />
                        </Helper>
                    </RadzenFormField>
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow AlignItems="Radzen.AlignItems.Start">
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenRow style="margin-bottom: 1rem; width:100%">
                        <RadzenCheckBox @bind-Value="@item.IS_EXTERNAL_INVENTORY" Name="IS_EXTERNAL_INVENTORY" />
                        <RadzenLabel Text="Inventario externo" Component="IS_EXTERNAL_INVENTORY" />
                    </RadzenRow>
                </RadzenColumn>
                <RadzenColumn Size="12" SizeMD="6">
                    <RadzenRow style="margin-bottom: 1rem; width:100%">
                        <RadzenCheckBox @bind-Value="@item.IS_CATALOG_VISIBLE" Name="IS_CATALOG_VISIBLE" />
                        <RadzenLabel Text="Visible en catálogo" Component="IS_CATALOG_VISIBLE" />
                    </RadzenRow>
                </RadzenColumn>
            </RadzenRow>
            <RadzenFormField Text="Notas" Variant="Variant.Text">
                <ChildContent>
                    <RadzenTextArea style="display: block; width: 100%" @bind-Value="@item.NOTES" Name="NOTES" Rows="3"></RadzenTextArea>
                </ChildContent>
            </RadzenFormField>
        </RadzenStack>
        <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
            <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Guardar" Variant="Variant.Flat" BusyText="Procesando..." IsBusy="@isSubmitInProgress" />
            <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancelar" Variant="Variant.Flat" Click="@CancelButtonClick" />
        </RadzenStack>
    </RadzenTemplateForm>
</RadzenColumn>

