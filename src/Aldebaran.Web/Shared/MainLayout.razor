@inherits LayoutComponentBase
@inject Microsoft.Extensions.Localization.IStringLocalizer<MainLayout> L
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body';">
    <RadzenHeader>
        <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="0">
            <RadzenColumn Size="5">
                <RadzenSidebarToggle Click="@SidebarToggleClick"></RadzenSidebarToggle>
            </RadzenColumn>
            <RadzenColumn Size="7">
                <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End">
                    <RadzenProfileMenu Visible="@Security.IsAuthenticated()" Click="@ProfileMenuClick" class="layout-toolbar">
                        <ChildContent>
                            <RadzenProfileMenuItem Path="profile" Icon="settings" Text="Perfil" />
                            <RadzenProfileMenuItem Path="application-users" Icon="person" Text="Inicios de sesión" />
                            <RadzenProfileMenuItem Path="application-roles" Icon="security" Text="Roles" />
                            <RadzenProfileMenuItem Text="Cerrar sesión" Value="Logout" Icon="power_settings_new" />
                        </ChildContent>
                        <Template>
                            <div class="d-flex gap-2 align-items-center">
                                <div style="margin: 0 0.5em;">
                                    @(LoggedEmployee?.DisplayName ?? LoggedEmployee?.FullName)<br />
                                    <span class="d-block text-end fw-bold">
                                        @Security.User?.Name
                                    </span>
                                </div>
                                <RadzenGravatar Email="@Security.User?.Name" onerror="this.style.display = 'none'" />
                            </div>
                        </Template>
                    </RadzenProfileMenu>
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenBody Expanded="@sidebarExpanded">
        <RadzenRow class="rz-mx-auto rz-px-4 rz-pt-2 rz-pt-md-4 rz-pt-lg-6 rz-pt-xl-12 rz-pb-2 rz-pb-lg-12" Style="max-width: 1440px;">
            <RadzenColumn Size="12">
                @Body
            </RadzenColumn>
        </RadzenRow>
    </RadzenBody>
    <RadzenSidebar Expanded="@sidebarExpanded" style="z-index: 2">
        <RadzenStack AlignItems="Radzen.AlignItems.Center" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border);">
            <RadzenImage Path="images/aldebaran-icon.svg" style="width: 32px;"></RadzenImage>
            <RadzenImage Path="images/aldebaran-text.svg" style="width: 150px;"></RadzenImage>
        </RadzenStack>
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Inicio" Path="" />
            <RadzenPanelMenuItem Text="Administración" Icon="admin_panel_settings">
                <RadzenPanelMenuItem Text="Artículos" Path="items" Visible="@Security.IsInRole("Admin","Item Editor","Item Viewer")" />
                <RadzenPanelMenuItem Text="Artículos por áreas" Path="areas" Visible="@Security.IsInRole("Admin","Area Editor","Area Viewer")" />
                <RadzenPanelMenuItem Text="Transportadoras" Path="forwarders" Visible="@Security.IsInRole("Admin","Forwarder Editor","Forwarder Viewer")" />
                <RadzenPanelMenuItem Text="Funcionarios" Path="employees" Visible="@Security.IsInRole("Admin","Employee Editor","Employee Viewer")" />
                <RadzenPanelMenuItem Text="Alarmas por funcionario" Path="employee-alarms" Visible="@Security.IsInRole("Admin","User Alarms Viewer","User Alarms Editor")" />
                <RadzenPanelMenuItem Text="Clientes" Path="customers" Visible="@Security.IsInRole("Admin","Customer Editor","Customer Viewer")" />
                <RadzenPanelMenuItem Text="Proveedores" Path="providers" Visible="@Security.IsInRole("Admin","Provider Editor","Provider Viewer")" />
                @if (Security.IsInRole("Admin"))
                {
                    <hr class="divider">
                    <RadzenPanelMenuItem Text="Notificaciones" Path="email-notification-settings" />
                }
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Movimientos de Inventario" Icon="extension">
                <RadzenPanelMenuItem Text="Ordenes de compra" Path="purchase-orders" Visible=@Security.IsInRole("Admin","Purchase Order Editor", "Purchase Order Viewer") />
                <RadzenPanelMenuItem Text="Reserva de artículos" Path="customer-reservations" Visible=@Security.IsInRole("Admin","Customer Reservation Viewer","Customer Reservation Editor","Customer Order Editor") />
                <RadzenPanelMenuItem Text="Pedido de artículos" Path="customer-orders" Visible=@Security.IsInRole("Admin","Customer Order Viewer","Customer Order Editor") />
                <RadzenPanelMenuItem Text="Traslado de pedidos a proceso " Path="process-customer-orders" Visible=@Security.IsInRole("Admin","Customer Order In Process Viewer","Customer Order In Process Editor") />
                <RadzenPanelMenuItem Text="Despacho de pedidos procesados" Path="shipment-customer-orders" Visible=@Security.IsInRole("Admin","Customer Order Shipment Viewer","Customer Order Shipment Editor") />
                <RadzenPanelMenuItem Text="Ajustes de inventario" Path="adjustments" Visible=@Security.IsInRole("Admin","Adjustment Editor","Adjustment Viewer") />
                <RadzenPanelMenuItem Text="Traslado entre bodegas" Path="warehouse-transfers" Visible=@Security.IsInRole("Admin","Transfer Warehouses Editor","Transfer Warehouses Viewer") />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Reportes" Icon="summarize">
                <RadzenPanelMenuItem Text="Inventario" Icon="summarize">
                    <RadzenPanelMenuItem Text="Inventario" Path="report/inventory" Visible=@Security.IsInRole("Admin","Report Viewer") />
                    <RadzenPanelMenuItem Text="Inventario en proceso" Path="report/inprocess-inventory" Visible=@Security.IsInRole("Admin","Report Viewer") />
                    <RadzenPanelMenuItem Text="Movimientos de artículos" Path="report/reference-movement" Visible=@Security.IsInRole("Admin","Report Viewer") />
                    <RadzenPanelMenuItem Text="Existencias en bodega" Path="report/warehouse-stock" Visible=@Security.IsInRole("Admin","Report Viewer") />
                    <RadzenPanelMenuItem Text="Ajustes de inventario" Path="report/inventory-adjustments" Visible=@Security.IsInRole("Admin","Report Viewer") />
                    <RadzenPanelMenuItem Text="Traslados entre bodegas" Path="report/warehouse-transfers" Visible=@Security.IsInRole("Admin","Report Viewer") />
                    <RadzenPanelMenuItem Text="Zona franca vs. Disponible" Path="/report/freezone-vs-available" Visible=@Security.IsInRole("Admin","Report Viewer") />
                </RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Clientes" Icon="summarize">
                    <RadzenPanelMenuItem Text="Reservas por cliente" Path="report/customer-reservation" Visible=@Security.IsInRole("Admin","Report Viewer") />
                    <RadzenPanelMenuItem Text="Pedidos por cliente" Path="report/customer-order" Visible=@Security.IsInRole("Admin","Report Viewer") />
                    <RadzenPanelMenuItem Text="Actividades de pedidos" Path="report/customer-order-activity" Visible=@Security.IsInRole("Admin","Report Viewer") />
                    <RadzenPanelMenuItem Text="Ventas por cliente" Path="report/customer-sales" Visible=@Security.IsInRole("Admin","Report Viewer") />
                </RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Proveedores" Icon="summarize">
                    <RadzenPanelMenuItem Text="Referencias del proveedor" Path="report/provider-references" Visible=@Security.IsInRole("Admin","Report Viewer") />
                    <RadzenPanelMenuItem Text="Ordenes en tránsito" Path="report/order-shipments" Visible=@Security.IsInRole("Admin","Report Viewer") />
                </RadzenPanelMenuItem>
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
        <RadzenStack AlignItems="Radzen.AlignItems.Center" Gap="0" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding);">
            <RadzenText Text="Aldebaran.Web v1.0.0" TextStyle="Radzen.Blazor.TextStyle.Caption" style="color: var(--rz-text-disabled-color);" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
            <RadzenText Text="Copyright Ⓒ 2023" TextStyle="Radzen.Blazor.TextStyle.Caption" class="rz-mb-0" style="color: var(--rz-text-disabled-color);" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
        </RadzenStack>
    </RadzenSidebar>
</RadzenLayout>